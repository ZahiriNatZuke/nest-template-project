generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                         String     @id @default(uuid())
  username                   String     @unique
  email                      String     @unique
  fullName                   String
  password                   String
  resetPasswordToken         String?
  resetPasswordExpiresAt     DateTime?
  confirmationToken          String?
  confirmationTokenExpiresAt DateTime?
  confirmed                  Boolean    @default(false)
  confirmedAt                DateTime?
  blocked                    Boolean    @default(false)
  deletedAt                  DateTime?
  avatarUrl                  String?
  phone                      String?
  address                    String?
  bio                        String?
  createdAt                  DateTime   @default(now())
  updatedAt                  DateTime   @updatedAt
  sessions                   Session[]
  userRoles                  UserRole[]

  @@index([id, email, username])
  @@index([deletedAt])
  @@index([confirmationToken])
  @@index([resetPasswordToken])
}

model Role {
  id              String           @id @default(uuid())
  identifier      String           @unique
  name            String           @unique
  description     String?
  default         Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  parentRoleId    String?
  parentRole      Role?            @relation("RoleHierarchy", fields: [parentRoleId], references: [id], onDelete: SetNull)
  childRoles      Role[]           @relation("RoleHierarchy")
  userRoles       UserRole[]
  rolePermissions RolePermission[]
  policies        Policy[]

  @@index([id, identifier, name])
  @@index([parentRoleId])
}

model Permission {
  id              String           @id @default(uuid())
  resource        String // e.g., "users", "roles", "api-keys"
  action          String // e.g., "read", "write", "delete"
  identifier      String           @unique // e.g., "users:read", "users:write"
  description     String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  rolePermissions RolePermission[]

  @@unique([resource, action])
  @@index([identifier, resource, action])
}

// Junction table: User ↔ Role (many-to-many)
model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

// 2.4 - Extender RolePermission con expiración temporal
model RolePermission {
  id           String     @id @default(uuid())
  roleId       String
  permissionId String
  createdAt    DateTime   @default(now())
  expiresAt    DateTime? // NULL = nunca expira. Si tiene valor = permiso temporal
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
  @@index([expiresAt])
}

// 2.3 - ABAC: Políticas condicionales
model Policy {
  id          String   @id @default(uuid())
  identifier  String   @unique // e.g., "can_edit_users_if_active"
  description String?
  roleId      String
  role        Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  // Formato JSON: {field: "status", operator: "eq", value: "active"}
  // Operadores: eq, ne, gt, gte, lt, lte, in, contains, startsWith
  condition   Json // condiciones que deben cumplirse
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([roleId])
  @@index([active])
}

// 2.2 - Resource-Level Authorization
model ResourceOwnership {
  id           String   @id @default(uuid())
  userId       String
  resourceType String // e.g., "user", "project", "document"
  resourceId   String // ID del recurso específico
  accessLevel  String   @default("owner") // "owner", "editor", "viewer"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, resourceType, resourceId])
  @@index([userId, resourceType])
  @@index([resourceType, resourceId])
}

model Session {
  id           String   @id @default(uuid())
  accessToken  String   @unique
  refreshToken String   @unique
  device       String
  ipAddress    String? // IP address from first login
  userAgent    String? // User-Agent from first login
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, device])
  @@index([id, userId, device])
  @@index([accessToken])
  @@index([refreshToken])
}

model ApiKey {
  id          String   @id @default(uuid())
  keyHash     String   @unique // bcrypt hash of the key
  application String   @unique
  default     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([id, keyHash, default, application])
}

model Settings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id, key])
}

model TokenBlacklist {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token, expiresAt])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String // e.g., "role.assign", "permission.add", "apikey.reveal"
  entityType String // e.g., "user", "role", "permission", "apikey"
  entityId   String?
  metadata   Json? // additional context
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId, action, createdAt])
  @@index([entityType, entityId])
}

model CsrfToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token, expiresAt])
}

model LoginAttempt {
  id         String   @id @default(uuid())
  identifier String // email o username
  ipAddress  String
  userAgent  String?
  success    Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@index([identifier, createdAt])
  @@index([ipAddress, createdAt])
  @@index([success, createdAt])
}

model AuditChangeLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String
  entityType String
  entityId   String?
  before     Json?
  after      Json?
  createdAt  DateTime @default(now())

  @@index([userId, action, createdAt])
  @@index([entityType, entityId])
}
