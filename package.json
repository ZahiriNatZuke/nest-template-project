{
  "name": "nest-template-project",
  "version": "0.0.5",
  "description": "Template Project of NestJS + Fastify + Prisma + Passport + Pino + Zod",
  "author": {
    "name": "Yohan Gonz√°lez Almaguer",
    "email": "yohan.gonzalez.almaguer@gmail.com",
    "url": "https://www.linkedin.com/in/yohan-gonzalez-almaguer/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZahiriNatZuke/nest-template-project.git"
  },
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "prisma generate",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start -b swc --watch",
    "start:debug": "nest start -b swc --debug --watch",
    "prestart:prod": "prisma migrate deploy",
    "start:prod": "node dist/src/main",
    "format": "biome format --fix",
    "lint": "biome check --fix --unsafe",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky",
    "precommit": "pnpm run lint && pnpm run format",
    "serve": "pnpm run precommit && pnpm run build && pnpm run start:prod"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/helmet": "13.0.2",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/static": "8.3.0",
    "@nestjs/common": "11.1.11",
    "@nestjs/core": "11.1.11",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-fastify": "11.1.11",
    "@nestjs/schedule": "6.1.0",
    "@nestjs/swagger": "11.2.3",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "bcrypt": "6.0.0",
    "dotenv": "17.2.3",
    "fastify": "5.6.2",
    "lodash": "4.17.21",
    "nestjs-pino": "4.5.0",
    "passport": "0.7.0",
    "passport-headerapikey": "1.2.2",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "pino-pretty": "13.1.3",
    "reflect-metadata": "0.2.2",
    "rotating-file-stream": "3.2.7",
    "rxjs": "7.8.2",
    "uuid": "13.0.0",
    "zod": "4.3.5",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@nestjs/cli": "11.0.14",
    "@nestjs/testing": "11.1.11",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.8",
    "@types/bcrypt": "6.0.0",
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.21",
    "@types/node": "25.0.3",
    "@types/passport": "1.0.17",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.3",
    "@types/zxcvbn": "^4.4.5",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prisma": "7.2.0",
    "source-map-support": "0.5.21",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/env$": "<rootDir>/config/envs",
      "^@app/(.*)$": "<rootDir>/app/$1",
      "^@config/(.*)$": "<rootDir>/config/$1"
    }
  }
}
